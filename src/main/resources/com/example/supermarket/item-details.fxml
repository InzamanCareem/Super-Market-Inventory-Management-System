<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="700.0" prefWidth="890.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.supermarket.ItemDetailsController">
   <children>
      <Label prefHeight="102.0" prefWidth="822.0" text="ITEM DETAILS">
         <font>
            <Font name="Cambria" size="40.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" left="40.0" right="20.0" top="20.0" />
         </VBox.margin>
      </Label>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
         <children>
            <HBox alignment="CENTER" prefHeight="64.0" prefWidth="890.0" VBox.vgrow="ALWAYS">
               <children>
                  <TextField fx:id="searchBox" onAction="#searchButton" prefHeight="30.0" prefWidth="230.0" promptText="Search for an item by code">
                     <HBox.margin>
                        <Insets left="40.0" />
                     </HBox.margin>
                     <font>
                        <Font name="Cambria" size="16.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="TEXT" />
                     </cursor>
                  </TextField>
                  <Pane prefHeight="49.0" prefWidth="405.0" HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" onAction="#deleteItem" prefHeight="35.0" prefWidth="140.0" styleClass="all-buttons" stylesheets="@market.css" text="Delete Item">
                     <font>
                        <Font name="Cambria" size="18.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="50.0" right="50.0" />
                     </HBox.margin></Button>
               </children>
            </HBox>
            <ScrollPane fx:id="scroll" prefHeight="410.0" prefWidth="830.0" styleClass="transparent" stylesheets="@market.css">
               <content>
                  <GridPane fx:id="grid" prefHeight="2.0" prefWidth="34.0" styleClass="grid-color" stylesheets="@market.css">
                     <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <padding>
                        <Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
                     </padding>
                  </GridPane>
               </content>
               <VBox.margin>
                  <Insets bottom="10.0" left="30.0" right="30.0" />
               </VBox.margin>
            </ScrollPane>
            <HBox alignment="CENTER" prefHeight="67.0" prefWidth="890.0" VBox.vgrow="ALWAYS">
               <children>
                  <Label fx:id="totalItemCount" prefHeight="50.0" prefWidth="500.0">
                     <HBox.margin>
                        <Insets left="50.0" right="50.0" />
                     </HBox.margin>
                     <font>
                        <Font name="Cambria" size="14.0" />
                     </font>
                  </Label>
                  <Pane prefHeight="50.0" prefWidth="470.0" HBox.hgrow="ALWAYS" />
                  <Label fx:id="totalMonetaryValue" prefHeight="59.0" prefWidth="500.0">
                     <HBox.margin>
                        <Insets left="50.0" right="50.0" />
                     </HBox.margin>
                     <font>
                        <Font name="Cambria" size="14.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>
